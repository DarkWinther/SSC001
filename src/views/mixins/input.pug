mixin input(name, type, value, error)
  label.input
    if block
      block
    else 
      = name[0].toUpperCase() + name.slice(1)
    if type === 'checkbox'
      input(name=name, checked=(!!value), type=type)
    else
      input(name=name, value=value type=type)
    if error
      span.error= error