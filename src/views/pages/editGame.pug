extends ../index.pug
include ../mixins/input.pug
block content
  main
    form(method='post')
      +input("title", 'text', title, error && error.title && 'Du skal indtaste en titel')
      +input('publisher', 'text', publisher, error && error.publisher && 'Du skal indtaste en publisher')
      +input('releaseDate', 'date', date, error && error.date && 'Du skal indtaste en dato')
      +input('genre', 'text', genre, error && error.genre && 'Du skal indtaste en genre')
      +input('metascore', 'number', metascore, error && error.metascore && 'Du skal indaste en score større end nul')
      +input('goty', 'checkbox', goty, error && error.goty && 'Du skal vælge goty')
      input(type='submit', value="SEND")